<Page x:Class="Final.Pages.LaboratoryAssistantPages.AcceptHazardousWastePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Final.Pages.LaboratoryAssistantPages"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="AcceptHazardousWastePage">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="250">
            <TextBlock Text="Считать штрихкод" />
            <TextBox Name="TextBoxCode" MaxLength="13"/>
            <Button Content="Считать"
                    Name="ButtonEnter"
                    IsDefault="True" 
                    Click="ButtonEnter_Click"/>
        </StackPanel>
    </Grid>
</Page>

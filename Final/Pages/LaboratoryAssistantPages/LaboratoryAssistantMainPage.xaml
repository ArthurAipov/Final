<Page x:Class="Final.Pages.LaboratoryAssistantPages.LaboratoryAssistantMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Final.Pages.LaboratoryAssistantPages"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="LaboratoryAssistantMainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock Name="TextBlockTimer" 
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Margin="20"
                   Grid.Column="1"
                   Text="1.1.1.1."
                   FontSize="15"
                   FontWeight="Bold"/>
        <StackPanel Margin="10">
            <Button Name="ButtonAcceptHazardousWaste"
                    Content="принять опасные отходы" 
                    Click="ButtonAcceptHazardousWaste_Click"/>
            <Button Name="ButtonGenerateReports"
                    Content="сформировать отчеты" 
                    Click="ButtonGenerateReports_Click"/>
        </StackPanel>
    </Grid>
</Page>
